<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:orientation="vertical">
    <EditText
        android:id="@+id/result_main"
        android:gravity="right"
        android:hint="0"
        android:textColorHint="#000000"
        android:selectAllOnFocus="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:inputType="none"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <Button
            android:id="@+id/clear"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:background="#307Dee"
            />
        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Back"
            android:background="#ff5151" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <Button
            android:id="@+id/sin"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sin"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/cos"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="cos"
            />
        <Button
            android:id="@+id/x2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="x²"
            />
        <Button
            android:id="@+id/x3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="x³"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/sqrt"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√"/>
        <Button
            android:id="@+id/left"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("/>
        <Button
            android:id="@+id/right"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:id="@+id/multi"
            android:layout_weight="1"
            android:text="*"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/seven"
            android:layout_weight="1"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/eight"
            android:layout_weight="1"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/nine"
            android:layout_weight="1"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/minus"
            android:layout_weight="1"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/four"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:id="@+id/five"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/six"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/one"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/two"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/three"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/div"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <Button
            android:id="@+id/zero"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:id="@+id/dot"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."/>
        <Button
            android:id="@+id/plusorminus"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"/>
        <Button
            android:id="@+id/equals"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="#F07D22"/>

    </LinearLayout>

</LinearLayout>